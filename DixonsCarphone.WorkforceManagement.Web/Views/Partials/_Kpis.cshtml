@using DixonsCarphone.WorkforceManagement.ViewModels.BusinessModels
@using DixonsCarphone.WorkforceManagement.ViewModels
@model List<KpiViewModel>

@{
    var weekNum = Model.FirstOrDefault()?.WeekNumber;
    var year = Model.FirstOrDefault()?.Year;
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Key Peyformance Indicators
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-kpis">
                    <thead>
                        <tr>
                            <th>Current/Actual</th>
                            <th>Target</th>
                            <th>Progress</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kpi in Model)
                        {
                            <tr class="gradeA">
                                <td>@kpi.Kpi</td>
                                <td>@kpi.Current</td>
                                <td>@kpi.Target</td>
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar @Html.Raw(kpi.Score.GetProgressBarCss())" style="width: @kpi.Score%"></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

