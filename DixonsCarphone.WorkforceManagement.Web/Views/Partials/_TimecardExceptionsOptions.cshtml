    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title"><strong>More on Timecard Exceptions...</strong></h4>
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <a href="@Url.Action("TimecardExceptions","STARHandbook", new { articleNumber = 1 })" class="btn btn-primary col-lg-3 col-md-5" style="margin-bottom:15px" role="button">Recognising Exceptions</a>
                <span class="col-md-1 col-lg-1"></span>
                <a href="@Url.Action("TimecardExceptions","STARHandbook", new { articleNumber = 2 })" class="btn btn-primary col-lg-3 col-md-5" style="margin-bottom:15px" role="button">Absences</a>
                <span class="col-md-1 col-lg-1"></span>
                <a href="@Url.Action("TimecardExceptions","STARHandbook", new { articleNumber = 3 })" class="btn btn-primary col-lg-3 col-md-5" style="margin-bottom:15px" role="button">Missed Punches</a>
