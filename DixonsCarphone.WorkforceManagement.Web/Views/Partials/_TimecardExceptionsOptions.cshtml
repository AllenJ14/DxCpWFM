                <span class="col-md-1 col-lg-1"></span>
                @if ((bool)HttpContext.Current.Session["_ROIFlag"])
                {
                    <a href="@Url.Action("TimecardExceptions","STARHandbook", new { articleNumber = 8 })" class="btn btn-primary col-lg-3 col-md-5 col-md-offset-3 col-lg-offset-4" style="margin-bottom:15px" role="button">Transfer to Lieu Time</a>
                    <span class="col-md-1 col-lg-1"></span>
                }
                else
                {
                    <a href="@Url.Action("TimecardExceptions","STARHandbook", new { articleNumber = 7 })" class="btn btn-primary col-lg-3 col-md-5 col-md-offset-3 col-lg-offset-4" style="margin-bottom:15px" role="button">Approve Unscheduled Time</a>
                    <span class="col-md-1 col-lg-1"></span>
