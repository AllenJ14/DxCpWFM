@using DixonsCarphone.WorkforceManagement.ViewModels.Model
@using System.Linq.Expressions

@model SingleOpeningTimeViewModel

<div class="panel panel-default">
    <div class="panel-heading"><h4 class="panel-title"><strong>Submit Change</strong></h4></div>

    @using (Html.BeginForm("EditSingleTime", "Planning", null, FormMethod.Post, new { @class = "form-horizontal", id = "changeTimeDateForm" }))
    {
        <row>
            &emsp;
        </row>

        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.TimeToEdit.EntryID)
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-md-6">
                <table class="table table-bordered table-condensed text-center">
                    <thead>
                        <tr>
                            <th class="col-md-4"></th>
                            <th class="col-md-4 text-center"><strong>Open</strong></th>
                            <th class="col-md-4 text-center"><strong>Close</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="text-center">
                            <td>
                                <strong>Sunday</strong>
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.SundayOpen, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.SundayClose, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Monday</strong>
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.MondayOpen, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.MondayClose, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Tuesday</strong>
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.TuesdayOpen, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.TuesdayClose, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Wednesday</strong>
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.WednesdayOpen, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.WednesdayClose, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Thursday</strong>
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.ThursdayOpen, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.ThursdayClose, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Friday</strong>
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.FridayOpen, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.FridayClose, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Saturday</strong>
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.SaturdayOpen, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td>
                                @Html.DropDownListFor(model => model.TimeToEdit.SaturdayClose, Model.Times, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default btn-primary btn-lg" />
                </div>
            </div>
        </div>
    }
</div>
