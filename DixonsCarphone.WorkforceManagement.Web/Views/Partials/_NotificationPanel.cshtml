@using DixonsCarphone.WorkforceManagement.ViewModels.BusinessModels
@model List<ActivityView>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bell fa-fw"></i> Notifications Panel
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
            <div class="list-group">
                @foreach (var activity in Model)
                {
                    <a href="@Url.Action("GetActivity", "Planning", new { activityId = activity.Activityid })" class="list-group-item">
                        <i class="fa fa-comment fa-fw"></i> @activity.Summary
                        <span class="pull-right text-muted small">
                            <em>@string.Format("{0:d} - {1} - {2}", activity.ActivityDate, activity.StartTime, activity.EndTime)</em>
                        </span>
                    </a>
                }
            </div>
                <!-- /.list-group -->
                <a href="@Url.Action("GetActivity", "Planning", new { activityId = -1 })" class="btn btn-default btn-block">View All Alerts</a>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
