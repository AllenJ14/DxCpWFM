
@{
    ViewBag.Title = "STAR Handbook";
}

<section class="content">
    <row>
        &emsp;
    </row>

    <row>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","STARHandbook")">STAR Handbook</a></li>
            <li><a href="@Url.Action("TimecardExceptions","STARHandbook")">Timecard Exceptions</a></li>
            <li class="active">Approve Unscheduled Time</li>
        </ol>
    </row>

    <row>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title"><strong>Approve Unscheduled Time</strong></h4>
            </div>
            <div class="panel-body">
                <row class="col-md-12">
                    <div class="col-md-6 text-center"><img src="~/Images/CMS_Uploads/ApproveUnscheduled1.png" class="img-responsive"/></div>
                    <br />
                    <div class="col-md-6">
                        <p>Highlight the day where the colleague has stayed late/come in early and click 'Approvals' then click 'Approve Overtime'.</p>
                    </div>
                </row>
                <div class="col-md-12">
                    &emsp;
                </div>
                <p>This will bring up the <strong>'Approve Overtime'</strong> box. </p>
                <div class="col-md-12">
                    &emsp;
                </div>
                <row class="col-md-12">
                    <div class="col-md-6 text-center"><img src="~/Images/CMS_Uploads/ApproveUnscheduled2.png" class="img-responsive"/></div>
                    <br />
                    <div class="col-md-6">
                        <p>The amount of overtime recorded is shown here</p>
                        <p>Select <strong>'All'</strong> – To approve the full amount in the box above</p>
                        <p>Select <strong>'None'</strong> – If you do not wish to approve any overtime</p>
                        <p>Select <strong>'Some'</strong> – To approve only part of the overtime amount in the box above, and specify the amount you wish to approve</p>
                        <p>Once you have confirmed the amount of overtime you want to approve. Click <strong>'OK'</strong>.</p>
                    </div>
                </row>
            </div>
        </div>
    </row>

    @Html.Partial("~/Views/Partials/_TimecardExceptionsOptions.cshtml")

    <div class="row">
        <div class="col-md-6">
        </div>
    </div>
</section>