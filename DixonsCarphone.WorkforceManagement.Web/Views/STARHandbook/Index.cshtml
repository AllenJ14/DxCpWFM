            <div class="col-md-12">
                    <a href="@Url.Action("KronosTerminal","STARHandbook")" class="btn btn-primary col-lg-3 col-md-5" style="margin-bottom:15px" role="button">Kronos Terminal</a>
                    <span class="col-lg-1 col-md-1"></span>
                    <a href="@Url.Action("Scheduling","STARHandbook")" class="btn btn-primary col-lg-3 col-md-5" style="margin-bottom:15px" role="button">Scheduling</a>
                    <span class="col-lg-1 col-md-1"></span>
                    <a href="@Url.Action("Availability","STARHandbook")" class="btn btn-primary col-lg-3 col-md-5" style="margin-bottom:15px" role="button">Colleague Availability</a>
                    <span class="col-lg-1 col-md-1"></span>
                    <a href="@Url.Action("ManagingTimecards","STARHandbook")" class="btn btn-primary col-lg-3 col-md-5" style="margin-bottom:15px" role="button">Managing Timecards</a>
                    <span class="col-lg-1 col-md-1"></span>
                    <a href="@Url.Action("TimecardExceptions","STARHandbook")" class="btn btn-primary col-lg-3 col-md-5" style="margin-bottom:15px" role="button">Timecard Exceptions</a>
                    <span class="col-lg-1 col-md-1"></span>
                    <a href="@Url.Action("TimecardSignOff","STARHandbook")" class="btn btn-primary col-lg-3 col-md-5" style="margin-bottom:15px" role="button">Timecard Sign Off</a>
                    <span class="col-lg-1 col-md-1"></span>
                    <a href="@Url.Action("EscalationsSupport","STARHandbook")" class="btn btn-primary col-lg-3 col-md-5 col-md-offset-3 col-lg-offset-4" style="margin-bottom:15px" role="button">Escalations & Support</a>
                    <span class="col-lg-1 col-md-1"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
        </div>
    </div>
</section>