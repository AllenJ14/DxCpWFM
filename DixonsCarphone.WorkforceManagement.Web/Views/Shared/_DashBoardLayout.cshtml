                                    }
                                    <li class="active"><a href="@Url.Action("EditedClocks", "Reports", new { area = "" })">Edited Clocks<span class="label label-danger pull-right">New!</span></a></li>
                                    <li class="active"><a href="@Url.Action("ColleaguePayPortal", "RightFirstTime", new { area = "" })">Colleague Portal<span class="label label-danger pull-right">New!</span></a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-tasks"></i> <span>Deployment</span>
                                    <span class="pull-right-container">
                                        <i class="glyphicon glyphicon-menu-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="nav nav-second-level">
                                    <li class="active"><a href="@Url.Action("GetDeployment", "Reports", new { area = "" })">WFM Deployment</a></li>
                                    @if (!(bool)HttpContext.Current.Session["_ROIFlag"])
                                    {
