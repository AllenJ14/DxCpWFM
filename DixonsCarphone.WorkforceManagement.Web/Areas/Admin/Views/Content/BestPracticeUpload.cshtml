@model DixonsCarphone.WorkforceManagement.ViewModels.BusinessModels.BestPracticeUploadViewModel

@{
    ViewBag.Title = "Best Practice Upload";
}

<h2>Upload</h2>

@using (Html.BeginForm("Upload", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="box-body">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Categories, htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Category, Model.Categories, "--Please Select--")
                @Html.ValidationMessageFor(model => model.Categories, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="file" id="doc" name="file" />
            </div>
        </div>

        <div class="box-footer">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}


